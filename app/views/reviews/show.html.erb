<div class="">
  <div class="">
    <label>电影名称:</label>
    <br>
    <%= @review.title%>
  </div>
  <div class="">
    <label>电影简介:</label>
    <br>
    <%= @review.description%>
  </div>
  <span>
    <% if current_user && current_user.is_favorites_of?(@review) %>
       <label class="label label-success ">已收藏</label>
    <% else %>
        <label class="label label-warning">未收藏</label>
    <% end %>
  </span>
  <%= link_to("评论该电影", new_review_post_path(@review), class: "btn btn-primary")%>
</div>
<table class="table">
  <thead>
    <tr>
      <th>评论内容</th>
      <th>评论者邮箱地址</th>
      <th>评论时间</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.comment%></td>
        <td><%= %></td>
        <td><%= post.created_at%></td>
      </tr>
    <% end %>
  </tbody>
</table>
