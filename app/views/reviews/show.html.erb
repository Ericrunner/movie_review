<div class="">
  <div class="">
    <label style="color:#ff0000;">电影名称:</label>
    <br>
    <%= @review.title%>
  </div>
  <div class="">
    <label style="color:#ff0000">电影简介:</label>
    <br>
    <%= @review.description%>
    <br>
  </div>
  <span>
    <% if current_user && current_user.is_favorites_of?(@review) %>
       <label class="label label-success ">已收藏</label>
       <%= link_to("取消收藏",quit_review_path(@review), method: :post, class: "btn btn-default")%>
    <% else %>
        <label class="label label-warning">未收藏</label>
        <%= link_to("收藏该电影",join_review_path(@review), method: :post, class: "btn btn-default")%>
    <% end %>
  </span>
  <%= link_to("评论该电影", new_review_post_path(@review), class: "btn btn-primary")%>
</div>
<table class="table">
  <thead>
    <tr>
      <th>评论内容</th>
      <th>评论者邮箱地址</th>
      <th>评论时间</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.comment%></td>
        <td><%= current_user.email%></td>
        <td><%= post.created_at%></td>
      </tr>
    <% end %>
  </tbody>
</table>
